<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tvLabelka"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tekst_labelki"
            />
        <ImageView
            android:id="@+id/imgObrazek"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/star_on"/>
    </TableRow>
    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/etTextBox"
            android:text=""
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:hint="Wpisz tu tekst">
            <requestFocus/>
        </EditText>
        <CheckBox
            android:id="@+id/cbZaznaczenie"
            android:text="@string/tekst_checkboxa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    </TableRow>
    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btPrzycisk"
            android:text="@string/tekst_przycisku"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:onClick="obslugaKlikniecia"
            android:layout_span="2"
            />
    </TableRow>
</TableLayout>

